<?xml version="1.0" encoding="UTF-8"?>
<!-- log4j2 框架自身调试信息输出级别控制 -->
<!--<Configuration status="warn">-->
<Configuration status="info">
    <Properties>
        <Property name="LOG_PATTERN">[INNO] [%d{yyyy-MM-dd HH:mm:ss} %-5p] [%t] (%c:%L) - %m%n %l%n</Property>
    </Properties>
    <Appenders>
        <!--文件大小到达指定尺寸的时候产生一个新的文件-->
        <!-- 输出到日志文件  -->
        <RollingRandomAccessFile name="filelog_appender"
                                 fileName="${app.de.log.output}.log"
                                 append="true" immediateFlush="true"
                                 filePattern="${app.de.log.output}-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1" />
                <SizeBasedTriggeringPolicy size="20 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>

        <!-- 输出到控制台中 -->
        <Console name="console" target="SYSTEM_OUT">
        <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <!--生产只输出到日志，不打印到控制台-->
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Root>
        <!-- 同步日志记录 -->
        <Root level="error">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Root>
        <Logger name="com.alibaba" level="info" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="com.cys" level="info" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="org.mybatis" level="info" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="java.sql.Statement" level="debug" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="java.sql.PreparedStatement" level="debug" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="java.sql.ResultSet" level="debug" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="java.sql.Connection" level="debug" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
        <Logger name="org.activiti.engine.impl.persistence.entity" level="debug" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender" />
        </Logger>
        <Logger name="org.docx4j" level="off" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="filelog_appender"/>
        </Logger>
    </Loggers>
</Configuration>
